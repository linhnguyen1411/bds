<div class="container">
  <div class="reg-block">
    <div class="reg-block-header">
      <h2>Sign Up</h2>
      <ul class="social-icons text-center">
        <li><a class="rounded-x social_facebook" data-original-title="Facebook" href="#"></a></li>
        <li><a class="rounded-x social_twitter" data-original-title="Twitter" href="#"></a></li>
        <li><a class="rounded-x social_googleplus" data-original-title="Google Plus" href="#"></a></li>
        <li><a class="rounded-x social_linkedin" data-original-title="Linkedin" href="#"></a></li>
      </ul>
      <p>Đăng ký nhanh một tài khoản để bắt đầu sử dụng dịch vụ của chúng tôi.</p>
    </div>
    <%= form_for resource, as: resource_name, url: registration_path(resource_name),
            html: {id: "form-user-register"} do |f| %>
      <div class="form-group">
        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group margin-bottom-30">
          <span class="input-group-addon"><i class="fa fa-key"></i></span>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
        </div>
      </div>
      <hr>
      <div class="checkbox">
        <label>
        <input type="checkbox">
        Tôi đã đọc và đồng ý với  <a target="_blank" href="page_terms.html">Điều khoản dịch vụ</a>
        </label>
      </div>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="text-center">
            <button type="submit" class="btn btn-default btn-lock">Đăng ký</button>
            <button type="button" class="btn btn-default" onclick="window.location.href = '<%= login_path %>'">
              <%= t ".have_account" %>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

