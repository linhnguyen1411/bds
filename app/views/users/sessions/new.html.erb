<div class="page-head">
  <div class="container">
    <div class="row">
      <div class="page-head-content">
        <h1 class="page-title">Home New account / Sign in </h1>
      </div>
    </div>
  </div>
</div>
<div class="register-area" style="background-color: rgb(249, 249, 249);">
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="box-for overflow">
        <div class="col-md-12 col-xs-12 login-blocks">
          <h2><%= t ".title" %></h2>
          <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {id: "form-user-session"} do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",
                id: "user-login-email" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autofocus: true, autocomplete: "email", class: "form-control",
                id: "user-login-password" %>
            </div>
            <div class="form-group">
              <%= f.check_box :remember_me, class: "form-control" %>
              <%= f.label :remember_me %>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-default btn-lock"> <%= t ".btn" %></button>
              <button type="button" class="btn btn-default" onclick="window.location.href = '<%= register_path %>'"><%= t ".not_have_account" %></button>
            </div>
          <% end %>
          <br>
          <h2>Social login :  </h2>
          <p>
            <a class="login-social" href="#"><i class="fa fa-facebook"></i>&nbsp;Facebook</a>
            <a class="login-social" href="#"><i class="fa fa-google-plus"></i>&nbsp;Gmail</a>
            <a class="login-social" href="#"><i class="fa fa-twitter"></i>&nbsp;Twitter</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
